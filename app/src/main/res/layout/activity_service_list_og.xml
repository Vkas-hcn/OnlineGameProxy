<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="backAdOg"
            type="Boolean"
            android:value="false" />
        <variable
            name="listAdOg"
            type="Boolean"
            android:value="false" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_main">

        <include
            android:id="@+id/select_title_og"
            layout="@layout/layout_toolbar_og" />
        <FrameLayout
            android:id="@+id/frameLayout_ad"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_list_ad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <FrameLayout
                android:id="@+id/og_ad_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{listAdOg ? View.VISIBLE : View.GONE}" />

            <ImageView
                android:id="@+id/img_og_ad_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_list_oc"
                android:visibility="@{listAdOg ? View.GONE : View.VISIBLE}" />
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_select"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_list"
            android:layout_margin="20dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</layout>
